{
  "manifest_version": 3,
  "name": "Xiaoniao - Type Translation Assistant",
  "version": "1.0.0",
  "description": "Automatic clipboard translation for real-time chat. Copy text and it will be translated instantly.",
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon_blue.png",
      "48": "icons/icon_blue.png",
      "128": "icons/icon_blue.png"
    }
  },
  "icons": {
    "16": "icons/icon_blue.png",
    "48": "icons/icon_blue.png",
    "128": "icons/icon_blue.png"
  }
}
